// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id         String     @id
  email      String     @unique
  fullName   String
  firstName  String
  lastName   String
  createdAt  DateTime
  updatedAt  DateTime
  activities Activity[]
}

model Activity {
  id     Int     @id @default(autoincrement())
  name   String
  user   User?   @relation(fields: [userId], references: [id])
  userId String?
}
